@model IEnumerable<Get_Api_Data_Thai.Models.ModelTest>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" />
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/fixedheader/3.1.6/css/fixedHeader.bootstrap4.min.css" />


<h1 class="text-center">ข้อมูลอำเภอของประเทศไทย</h1>
<hr>

<table id="dataTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.district)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.amphoe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.zipcode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.district_code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.amphoe_code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.province_code)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.district)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.amphoe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.province)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.zipcode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.district_code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.amphoe_code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.province_code)
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript" src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="//cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#dataTable").dataTable({
                "searching": true,
                "ordering": true,
                "paging": true,
                "pagingType": "full_numbers",
                "pageLength": 10,
                "responsive": true,
                "columnDefs": [{
                    "targets": 3,
                    "orderable": false
                }]
            });
        });
    </script>
}